{
  "name": "trivia",
  "version": "1.0.0",
  "description": "Trivia kata in typescript",
  "main": "src/game-runner.ts",
  "scripts": {
    "start": "ts-node src/game-runner.ts",
    "test": "mocha --recursive --require ts-node/register \"tests/**/*.test.ts\"",
    "test:watch": "mocha --recursive --require ts-node/register \"tests/**/*.test.ts\" --watch --watch-files \"src/**/*.ts\"",
    "test:coverage": "nyc mocha --recursive --require ts-node/register \"tests/**/*.test.ts\""
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "text",
      "html",
      "lcov"
    ]
  },
  "author": "Felix Blechschmitt",
  "license": "GPL-3.0",
  "dependencies": {
    "typescript": "^2.9.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "mocha-chai-jest-snapshot": "^1.1.4",
    "nyc": "^15.1.0",
    "sinon": "^6.3.5",
    "ts-node": "^10.8.2"
  }
}
